<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="#CC5C8EE3"
        card_view:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/eventcard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:id="@+id/progressicon"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="70dp" />
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:id="@+id/playerImage"
                            android:layout_margin="5dp"/>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đội:"
                            android:textSize="20dp"
                            android:textStyle="italic"
                            android:layout_gravity="left"
                            android:textColor="#ffffff"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/attack"
                            android:textSize="20dp"
                            android:textColor="#ffffff"
                            android:layout_gravity="left"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textStyle="italic"
                            android:text="Địa phương:"
                            android:layout_gravity="left"
                            android:textSize="20dp"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:id="@+id/defend"
                            android:textSize="20dp"
                            android:layout_gravity="left"
                            android:gravity="left"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/playerName"
                android:text="Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pos"
                    android:text="Chức vụ: "
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/playerPosition"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/pos"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/agename"
                    android:text="Tuổi: "
                    android:layout_width="120dp"
                    android:layout_below="@id/pos"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/playerAge"
                    android:text=""
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/playerPosition"
                    android:layout_toRightOf="@+id/agename"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/birth"
                    android:text="Ngày sinh: "
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/playerAge"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/playerBirth"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/playerAge"
                    android:layout_toRightOf="@+id/birth"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/wei"
                    android:text="Cân nặngh: "
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/birth"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/playerWeight"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/playerBirth"
                    android:layout_toRightOf="@+id/wei"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/hei"
                    android:text="Chiều cao: "
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/wei"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/playerHeight"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/playerWeight"
                    android:layout_toRightOf="@+id/hei"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>