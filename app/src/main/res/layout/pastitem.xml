<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="#CC5C8EE3"
        card_view:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/eventcard">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/a1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:id="@+id/eventimg"
                    android:scaleType="centerCrop"
                    android:transitionName="img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/home"
                        android:text="Home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/homescore"
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_below="@+id/home"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/vs"
                        android:layout_below="@+id/homescore"
                        android:text="VS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/awayscore"
                        android:text="0"
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_below="@+id/vs"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/away"
                        android:text="away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_below="@+id/awayscore"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/a1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    >
                    <TextView
                        android:id="@+id/eventleague"
                        android:text="League"
                        android:layout_width="190dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/eventseason"
                        android:text="Season"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_below="@+id/eventimg"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/event1"
                        android:text="ngày:"
                        android:layout_margin="5dp"
                        android:layout_width="35dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/eventdate"
                        android:text="date"
                        android:layout_margin="5dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_below="@+id/eventtitle"/>
                    <TextView
                        android:id="@+id/event2"
                        android:text="Thời gian:"
                        android:textColor="#FFFFFF"
                        android:layout_margin="5dp"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/eventtime"
                        android:text="Thời gian"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_below="@+id/eventdate"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/event12"
                        android:text="Địa điểm"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/eventvenue"
                        android:text="venue"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_below="@+id/eventdate"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/event122"
                        android:text="Trạng thái"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/eventstatus"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:text="status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_below="@+id/eventdate"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>